<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/output"
        android:paddingHorizontal="25dp"
        android:text=""
        android:textColor="@color/pewter"
        android:textSize="27dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nums"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="69dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ac"
                style="@style/Button3"
                android:text="AC"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:text="7"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:text="4"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:text="1"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/del"
                style="@style/Button5"
                android:text="⌫"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/modulo"
                style="@style/Button1"
                android:text="%"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:text="8"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:text="5"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:text="2"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/divide"
                style="@style/Button1"
                android:text="÷"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num9"
                style="@style/Button2"
                android:text="9"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num6"
                style="@style/Button2"
                android:text="6"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/num3"
                style="@style/Button2"
                android:text="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/dot"
                style="@style/Button2"
                android:text="."
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/multiply"
                style="@style/Button1"
                android:text="x"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/minus"
                style="@style/Button1"
                android:text="-"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/plus"
                style="@style/Button1"
                android:text="+"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/equal"
                style="@style/Button4"
                android:layout_height="173dp"
                android:text="="
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nums"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/spline_sans_semibold"
        android:text="Crafted By भरत"
        android:textAlignment="center"
        android:textColor="@color/pewter"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>